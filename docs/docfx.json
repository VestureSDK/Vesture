{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/Mediator/*/*.csproj"
          ],
          "exclude": [
            "**/*.Benchmarks.csproj",
            "**/*.Tests.csproj"
          ]
        }
      ],
      "dest": "docs/Mediator/References",
      "namespaceLayout": "nested"
      // "memberLayout": "separatePages",
      // "outputFormat": "markdown"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "**/Overrides/**",
          "**/Fragments/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": "**/Overrides/*.md",
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "crucible-docs",
      "_appTitle": "crucible-docs",
      "_enableSearch": true,
      "pdf": false
    }
  }
}