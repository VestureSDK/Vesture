{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/Mediator/*/*.csproj"
          ],
          "exclude": [
            "**/*.Benchmarks.csproj",
            "**/*.Tests.csproj",
            "**/Crucible.Mediator.csproj"
          ]
        }
      ],
      "dest": "docs/Mediator/References",
      "namespaceLayout": "nested"
      // "memberLayout": "separatePages",
      // "outputFormat": "markdown"
    },
    //{
    //  "src": [
    //    {
    //      "src": "../src",
    //      "files": [
    //        "**/Crucible.Mediator.csproj"
    //      ]
    //    }
    //  ],
    //  "dest": "docs/Mediator/Advanced/References",
    //  "namespaceLayout": "nested"
    //  // "memberLayout": "separatePages",
    //  // "outputFormat": "markdown"
    //}
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "**/Overrides/**",
          "**/Fragments/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": "**/Overrides/*.md",
    "output": "_site",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "Crucible",
      "_appTitle": "Crucible",
      "_enableSearch": true,
      "_appFooter": null,
      "_disableContribution": true,
      "pdf": false
    }
  }
}